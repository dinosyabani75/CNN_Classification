<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom4"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="end">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="200dp"
            android:src="@drawable/akprind"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_rockford_sans"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/klasifikasi_buah_segar_dan_busuk"
            android:textColor="@color/custom3"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/icon_app"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_rockford_sans"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:text="@string/dibuat_oleh_informatika_ist_akprind_yogyakarta"
            android:textColor="@color/custom3"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>